<Window x:Class="WpfAppSendTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSendTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox Name="tbCS" Margin="2"/>
        <TextBox Name="tbDeviceId" Grid.Row="1" Margin="2"/>
        <Button Name="buttonConnect" Content="Connect" Grid.Row="2" Margin="2" Click="buttonConnect_Click" />
        <Button Name="buttonSend" Content="Send" Grid.Row="3" Margin="2" Click="ButtonSend_Click" IsEnabled="False"/>
        <ScrollViewer Grid.Row="4" Margin="2">
            <TextBlock Name="tbLog" />
        </ScrollViewer>
        <Button Name="buttonClearLog" Content="Clear" Grid.Row="5" Margin="2" Click="buttonClearLog_Click"/>
    </Grid>
</Window>
